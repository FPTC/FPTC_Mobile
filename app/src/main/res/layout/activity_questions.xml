<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_questions"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.pfccap.education.presentation.main.ui.activities.QuestionsActivity"
    android:weightSum="1"
    android:orientation="vertical">

    <TextView
        android:id="@+id/mainQuestionTxtQuestion"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"
        android:text="Texto temporal de pregunta principal"
        android:textSize="20sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/mainQuestionBtnYes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            style="@style/BtnPpal"
            android:padding="20dp"
            android:text="@string/yes"/>

        <Button
            android:id="@+id/mainQuestionBtnNo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            style="@style/BtnPpal"
            android:padding="20dp"
            android:text="@string/no"/>
    </LinearLayout>

    <TextView
        android:id="@+id/mainQuestionTxtSecondQuestion"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"
        android:visibility="visible"
        android:text="testo prueba dos"
        android:layout_marginTop="10dp"
        android:textSize="20sp"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mainQuestionSpinnerAnswer"
        android:visibility="visible"
        android:layout_marginTop="10dp"/>

</LinearLayout>
