<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.pfccap.education.presentation.main.ui.fragments.MainFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:orientation="horizontal"
            android:weightSum="1">
            <!-- TODO: Update blank fragment layout -->

            <Button
                android:id="@+id/mainBtnBreast"
                style="@style/BtnMain"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text="@string/btn_breast_cancer"
                android:layout_weight="0.5"
                android:background="@color/colorPrimaryLight"/>

            <Button
                android:id="@+id/mainBtnCervical"
                style="@style/BtnMain"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text="@string/btn_cervical_cancer"
                android:layout_weight="0.5"
                android:background="@color/colorBlueLigth"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5">

            <Button
                android:id="@+id/mainBtnGift"
                style="@style/BtnMain"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text="@string/btn_take_gift"
                android:background="@color/colorPrimary"/>

        </LinearLayout>
    </LinearLayout>
</FrameLayout>