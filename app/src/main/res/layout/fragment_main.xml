<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.pfccap.education.presentation.main.ui.fragments.MainFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6"
            android:orientation="horizontal"
            android:weightSum="1">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5">

                <ImageButton
                    android:id="@+id/mainBtnBreast"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/aprende_cancer_seno" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="@color/colorPrimaryLightTransparence"
                    android:gravity="center"
                    android:text="@string/btn_breast_cancer"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="20sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5">

                <ImageButton
                    android:id="@+id/mainBtnCervix"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/aprende_cancer_cervix" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="@color/colorBlueLigthTransparence"
                    android:gravity="center"
                    android:text="@string/btn_cervical_cancer"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="20sp" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mainBtnGift"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:clickable="true"
            android:background="@color/colorPrimary"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/ic_gift_white_intro"
                android:layout_gravity="center"
                android:contentDescription="@string/gift" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_take_gift"
                android:textSize="24sp"
                android:textColor="@color/colorPrimaryText"/>

        </LinearLayout>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/mainProgressBar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:indeterminate="true"
        android:visibility="invisible" />
</FrameLayout>